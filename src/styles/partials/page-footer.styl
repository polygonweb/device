.page-footer
    margin-top: auto;
    flex: 0 0 auto;
    padding: 55px 0;
    color: #fff;
    background: $colors["dark"];

    &__row
        display: flex;
        justify-content: space-between;
        align-items: center;

        &:last-child
            padding-top 30px

            &::before
                content ""
                display inline-block
                width 80px
                height 7px
                background: $colors["brand-light"];
