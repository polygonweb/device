.service-nav
    $fill-color = #000

    position relative
    z-index 0
    margin 0
    padding 0 0 68px
    list-style none

    &::before
        content ""
        position absolute
        top -100vh
        bottom 0
        right -4px
        width 7px
        background: $fill-color

    &__item
        overflow hidden

        & + &
            margin-top 24px

    &__link
        display block
        overflow visible
        width: ($grid["col-width"] + $grid["gutter"]) * 2;
        padding-left  10px
        padding-right 10px
        outline 0

        &_active
            color: $colors["brand-light"];

            &::before
                right -100%
                height 100%
                background $fill-color


.services-section
    margin-top 51px
    padding-top 101px
    overflow hidden
    background: $colors["grey"];
    background-clip: content-box

    &__inner
        display flex
        padding-bottom 69px

    &__nav
        margin-top -20px
        width: 25%
        flex 0 0 auto

    &__desc
        margin-top -30px
        flex 1 1 0%
        padding-right: $grid["col-width"];
        padding-left: $grid["col-width"] + 3 * $grid["gutter"];

    $services = ((delivery 14px) (warranty -12px) (credit -10px))

    &__service
        position relative
        display none

        &::before
            content ""
            position absolute
            top 0
            right 0
            setSprite()

        for $service in $services
            &_{$service[0]}::before
                top: $service[1];
                sprite($service)

        &_active
            display block
            animation showService .75s

            @keyframes showService {
                0%   { opacity: 0; }
                100% { opacity: 1; }
            }

    &__title
        margin-top 0
        margin-bottom 30px

    &__text
        width: $grid["col-width"] * 5 + 4 * 2 * $grid["gutter"];
        line-height 2
        font-size 15px
        font-weight 300
        color: $colors["dark"];


