$baseFontFolder = '../fonts';

fontFace({
    family: "Open Sans",
    weight: normal,
    style: normal,
    basePath: $baseFontFolder + '/opensans/',
    fileName: 'opensans'
})

fontFace({
    family: "Open Sans",
    weight: 300,
    style: normal,
    basePath: $baseFontFolder + '/opensans/',
    fileName: 'opensanslight'
})

fontFace({
    family: "Gilroy",
    weight: 300,
    style: normal,
    basePath: $baseFontFolder + '/gilroy/',
    fileName: 'gilroylight'
})

fontFace({
    family: "Gilroy",
    weight: 800,
    style: normal,
    basePath: $baseFontFolder + '/gilroy/',
    fileName: 'gilroyextrabold'
})

:root
    font-size: $font["size"];
    font-family: $font-alpha;
    text-rendering: optimizeLegibility;
    font-smooth: always;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    -webkit-tap-highlight-color: transparent

.title
    // margin 0
    font-size: 47px;
    font-family: $font-beta;
    font-weight: 800;
    letter-spacing: 0.01em;
