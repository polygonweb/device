.modal
    $animTime = 0.4s

    position fixed
    z-index 3
    top 0
    bottom 0
    left 0
    right 0
    opacity 0
    visibility hidden
    overflow auto
    padding 2em 0
    -webkit-overflow-scrolling touch
    text-align center
    transition $animTime

    &__outer
        display table
        width 100%
        height 100%
        border-collapse collapse

    &__inner
        $pad = 2 * $grid["gutter"] + $grid["col-width"]

        display table-cell
        vertical-align middle
        padding-left  $pad
        padding-right $pad

    &__dialog
        position relative
        display block
        vertical-align middle
        transform translateY(-25%)
        text-align left
        background #fff
        box-shadow 0 10px 20px rgba(#000, 0.2)
        transition $animTime

    &__close
        position absolute
        z-index 1
        top   22px
        right 22px
        padding 0
        border 0
        font-size 55px
        width  1em
        height 1em
        background: rgba($colors["brand"], 0.5)
        cursor pointer
        border-radius 50%
        transition .14s linear

        &::before
        &::after
            content ""
            position absolute
            top 0
            bottom 0
            left 0
            right 0
            margin auto
            height 2px
            width 32px
            border-radius 2px
            background #fff

        &::before
            transform rotate(45deg)

        &::after
            transform rotate(-45deg)

        &:hover
            background: rgba($colors["brand"], 1)

        &:active
            &::before
            &::after
                opacity 0.3

    &_show
        opacity 1
        visibility visible

    &_show &__dialog
        transform translateY(0)
