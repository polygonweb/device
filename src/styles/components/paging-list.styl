.paging-list
    margin 0
    padding 0
    list-style none
    display flex

    &__item
        display inline-block
        display flex

    &__link
        opacity 0.3
        display block
        display flex
        align-items center
        padding 16px
        text-align center
        color inherit
        text-decoration none
        transition .16s

        &:hover
            opacity 0.6

        &:active
            opacity 1

    &__item_active &__link
        opacity 1
        pointer-events none
