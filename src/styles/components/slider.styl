.slide
    $curtain-anim-time = 1.2s;
    $elem-anim-time = 0.7s;

    position relative
    display flex

    &__image
    &__desc
        position relative
        flex 1 1 auto
        box-sizing border-box
        width 50%
        padding-left:  $grid["gutter"];
        padding-right: $grid["gutter"];

    &__image-src
    &__desc
        opacity 0
        transition $elem-anim-time

    &__image
        position relative
        text-align center
        display flex
        align-items center
        justify-content center

        &::after
            content ""
            position absolute
            top 0
            left 0
            transform scaleX(0)
            transform-origin 0 0
            width 100%
            height 100%
            // background: #d8d8d8;
            background: $colors["grey"];
            pointer-events none

        &-src
            margin auto
            display inline-block
            vertical-align top
            max-width 100%

    &__desc
        padding-right: $grid["col-width"];

    &__number
        position relative
        z-index -1
        top -10px
        overflow hidden
        font 800 179px/1 $font-beta
        letter-spacing 0.01em
        color #fff
        text-align right

        &::before
            content ""
            position absolute
            top 49px
            left 0
            width 100px
            height 7px
            background currentColor

        &-text
            display block

    &__title
        $height = 56px
        margin 0
        margin-top -100px
        margin-bottom 18px
        display block
        overflow hidden
        height 2 * $height
        line-height: $height
        white-space nowrap

        &-row
        &-text
            display block
            overflow hidden

    &__number-text
    &__title-text
        animation slideItemHide $elem-anim-time both

    &__text
        $height = 30px
        margin 0
        margin-bottom: 43px
        margin-right: $grid["gutter"];
        overflow hidden
        height $height * 2
        line-height $height
        font-size 15px
        font-weight 300
        letter-spacing 0.01em
        color: $colors["dark"];

    &__stat
        margin 50px 0 0

    &_active
        z-index 1

    &_active &__desc
    &_active &__image-src
        opacity 1

    &_active &__image-src
        transition-delay: ($curtain-anim-time / 2);

    &_active &__image::after
        $showCurtain($curtain-anim-time);

    &_active &__number-text
    &_active &__title-text
        animation slideItemShow $elem-anim-time both


.slider
    // $min-height = 112px
    $min-height = 113px
    box-sizing border-box
    // margin-bottom 116px
    margin-bottom 102px
    position relative
    min-height $min-height
    min-height 486px

    &::before
        content: ""
        position absolute
        z-index -1
        top 0
        left 0
        right 0
        height: $min-height
        background: $colors["brand-bg"];

    &__nav
        $item-pad = 12px
        position absolute
        z-index 2
        top 315px
        right: $grid["col-width"] + $grid["gutter"];
        margin-right -1 * $item-pad
        display flex
        align-items center

        &-item
            opacity 0.3
            display inline-block
            vertical-align middle
            padding $item-pad
            border 0
            background 0
            cursor pointer
            transition .2s

            &::before
                content ""
                display block
                width  4px
                height 4px
                border 3px solid
                border-radius 50%

            &:hover
            &:focus
                opacity 0.6

            &_active
                opacity 1

    &__slide
        position absolute
        top 0
        bottom 0
        left 0
        right 0


@keyframes slideItemHide {
    0%   { transform: translateY(0%)   }
    100% { transform: translateY(100%) }
}

@keyframes slideItemShow {
    0%   { transform: translateY(-100%) }
    100% { transform: translateY(0%)    }
}
