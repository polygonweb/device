.product-card

    $time = 1.4s;

    display block
    text-decoration none
    color inherit

    &__head
        position relative
        background #eee

        &::before
            content ""
            position absolute
            z-index 1
            top 0
            left 1px
            width 100%
            height 100%
            transform scaleX(0)
            transform-origin 0 0
            pointer-events none
            background: #dcdcdc;
            // animation:
            //     showCurtain $time cubic-bezier(0.9, 0, 0.1, 1) both,
            //     curtainTransformOrigin $time step-end both;
            // animation-play-state: paused;

    &__image
        display block
        width 100%
        opacity 0
        transition $time

    &__tools
        position absolute
        z-index 1
        top 0
        bottom 0
        left 0
        right 0
        opacity 0
        display flex
        flex-direction column
        justify-content center
        align-items center
        background rgba(#eee, 0.7)
        transition .2s linear
        backdrop-filter blur(2px)

    &__add-btn
        margin-top 18px
        margin-bottom 16px

    &__body
        padding 32px 0
        display flex
        justify-content space-between
        align-items baseline
        font-family $font-beta
        letter-spacing 0.01em

    &__title
        margin 0
        padding-right: $grid["gutter"];
        font-size 18px
        font-weight 800

    &__price
        font-size 16px
        font-weight 300
        color: $colors["dark"];
        white-space nowrap

    // &:hover &__head

    &:hover &__tools
        opacity 1

    &_load &__image
        opacity 1
        transition-delay ($time / 2)

    &_load &__head::before
        // animation:
        //     showCurtain $time $curtain-ease both,
        //     curtainTransformOrigin $time step-end both;
        // animation-play-state: running;
        $showCurtain($time);
