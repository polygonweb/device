.text-input
    display block
    box-sizing border-box
    width 100%
    padding 0 18px
    height 50px
    border 3px solid transparent
    font-family $font-alpha
    background #f2f2f2
    transition .2s
    transition-property background, border-coor

    &:hover
        background #eaeaea

    &:focus
        outline 0
        background #fff
        border-color #e5e5e5

    // &:invalid
    //     background: $colors["danger"];

    &::placeholder
        opacity 0.4
        color: $colors["dark"];

    &_multiline
        min-height 156px
        padding-top 10px
        padding-bottom 10px
        resize vertical
