.search-form
    $this = selector()
    $formLineTime = 0.26s;
    $lineTime = .16s

    position relative
    display flex

    // иконка поиска
    &__icon
        position absolute
        top 0
        bottom 0
        left 2px
        margin auto
        font-size 16px
        width  1em
        height 1em
        pointer-events none

    // поле ввода
    &__input
        box-sizing border-box
        padding: 0 $grid["gutter"] * 2;
        max-width 100%
        flex 1 1 0%
        font inherit
        border 0
        background 0
        outline 0

        &::placeholder
            color inherit
            opacity 0.3

        &:hover::placeholder
            opacity 0.6

    // кнопка отправки
    &__btn
        position relative
        flex 0 0 auto
        padding: 14px 20px;
        border 0
        opacity 0
        visibility hidden
        font inherit
        background 0
        transition:
            background .2s,
            opacity .2s ($lineTime * 3),
            visibility .2s ($lineTime * 3)

        &:hover
        &:focus
            background-color: #000
            color: #fff

        &:active
            color: rgba(#fff, 0.3)

    // декоративные линии
    &__btn-line
        position absolute
        background #000
        transition transform $lineTime

        &_top
        &_bottom
            left 0
            width 100%
            height 2px
            transform scaleX(0) scaleY(1)

        &_left
        &_right
            top 0
            width 2px
            height 100%
            transform scaleX(1) scaleY(0)

        &_bottom
            bottom 0
            transform-origin 0 0
            transition-delay: ($lineTime * 0)

        &_right
            right 0
            transform-origin 0 100%
            transition-delay: ($lineTime * 2)

        &_top
            top 0
            transform-origin 100% 0
            transition-delay: ($lineTime * 1)

        &_left
            left 0
            transform-origin 0 0
            transition-delay: ($lineTime * 0)

    &::before
        content ""
        position absolute
        left 0
        right 0
        bottom 0
        height 2px
        background currentColor
        transform scaleX(0)
        transform-origin 0 50%
        transition $formLineTime ($lineTime * 3)

    &_focus &__btn
        opacity 1
        visibility visible
        transition-delay:
            0s,
            0s,
            0s;

    &_focus::before
        transform scaleX(1)
        transition-delay 0s

    &_focus &__btn
        {$this}__btn-line

            &_bottom
            &_top
                transform scaleX(1) scaleY(1)

            &_left
            &_right
                transform scaleX(1) scaleY(1)

            &_bottom
                transition-delay: ($formLineTime + $lineTime * 0)
            &_right
                transition-delay: ($formLineTime + $lineTime * 0)
            &_top
                transition-delay: ($formLineTime + $lineTime * 1)
            &_left
                transition-delay: ($formLineTime + $lineTime * 2)
