.sort-order
    display flex
    align-self stretch
    flex 0 0 auto

    &__btn
        position relative
        opacity 0.2
        flex 0 0 auto
        display flex
        align-items center
        justify-content center
        color inherit
        text-decoration none
        transition .14s

        &::after
            $offset = -13px
            content ""
            position absolute
            top    0
            bottom 0
            left   $offset
            right  $offset

        &::before
            content ""
            display inline-block
            flex 0 0 auto
            border-style solid
            border-width 9px
            border-left-color transparent
            border-right-color transparent

        &_up::before
            border-top 0

        &_down::before
            border-bottom 0

        &:hover
            opacity 0.4

        &:active
            opacity 1

        &_active
            opacity 1
            pointer-events none

        & + &
            margin-left 26px
