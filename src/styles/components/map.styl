.map
    position relative

    &::before
        content ""
        display block
        padding-top 58.33%

    &::after
        content ""
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        background: rgba($colors["brand-bg"], 0.9);
        transition .4s

    &__content
        position absolute
        top 0
        bottom 0
        left 0
        right 0

    &__loading
        position absolute
        z-index 1
        top 50%
        left 50%
        transform translate(-50%, -50%)
        font 400 18px $font-beta
        letter-spacing 0.02em
        transition .4s

    &_load::after
    &_load &__loading
        opacity 0
        visibility hidden
