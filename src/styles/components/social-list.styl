.social-list
    margin 0
    padding 0
    list-style none
    display flex
    flex-wrap wrap
    align-items center

    &__item
        margin: 0 8px 8px
        display inline-block

    &__link
        $size = 34px
        display block
        opacity 0.3
        width $size
        line-height $size
        border 2px solid
        text-align center
        font-size 0
        color #fff
        border-radius 50%
        transition .16s

        &:hover
            opacity 0.6

        &:active
            opacity 0.2

    &__icon
        display inline-block
        vertical-align middle
        font-size: 20px
